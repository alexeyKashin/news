<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="a.kashin.news.web.item.ItemBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="a.kashin.news.web.item">
    <dsContext>
        <datasource id="itemDs"
                    class="a.kashin.news.entity.Item"
                    view="item-with-site-view"/>
        <groupDatasource id="itemsDs"
                         class="a.kashin.news.entity.Item"
                         view="_local">
            <query>
                <![CDATA[select e from news$Item e order by e.date desc]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="itemsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="refresh"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="date"/>
                        <column id="link"/>
                    </columns>
                    <rows datasource="itemsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="refreshBtn"
                                action="table.refresh"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%" width="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup" width="100%" editable="false"
                                datasource="itemDs">
                        <column width="100%">
                            <field property="name"/>
                            <field property="date"/>
                            <field property="description"
                                   rows="5"/>
                            <field property="link"/>
                            <field property="site"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
            </vbox>
        </split>
    </layout>
</window>
